<% include ../partials/header%>



<div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>YelpCamp</h1>
                <p>Hand-picked campgrounds from all over the world</p>  
                <p>
                  <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new</a>
                </p>
            </div>
        </header>
        
        <div class="row " class="card-columns"> 
            <% campgrounds.forEach(function(camp){ %>


            <div class="  col-md-3 col-sm-6">
                <div class="card">
                        <img src="<%=camp.image%>" class="card-img-top" width="193" height="130">
                        <div class="card-body">
                            <h4 class="card-text text-center"><%=camp.name%></h4>
                        </div>
                        <p class="card-text text-center ">
                            <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a> 
                        </p>
                </div>
                
            </div>

            
            <%});%>
        </div>
   
    
</div>

<% include ../partials/footer%>